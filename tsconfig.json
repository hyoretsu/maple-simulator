{
	"compilerOptions": {
		"jsx": "preserve",
		"paths": {
			"@app/*": ["app/*"],
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@context/*": ["context/*"],
			"@data/*": ["../public/data/*"],
			"@hooks/*": ["hooks/*"],
			"@public/*": ["../public/*"],
			"@services/*": ["services/*"],
			"@utils/*": ["utils/*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"exclude": ["node_modules"],
	"extends": ["@hyoretsu/configs/ts-frontend"],
	"include": [
		"./*.js",
		"./*.cjs",
		"./*.mjs",
		"./*.ts",
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		".next/types/**/*.ts"
	]
}
